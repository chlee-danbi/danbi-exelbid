{
    "compilerOptions": {
      "outDir": "./lib",
      "target": "es5",
      "module": "commonjs",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "removeComments": true,
      "declaration": true,
      "esModuleInterop":true,
      "sourceMap": true,
      "allowJs":true,
      "jsx": "react",
      "typeRoots": [
        "index.d.ts",
        "node_modules/@types"
      ]
    },
    "include": [
      "./src/**/*.tsx",
      "./src/**/*.ts",
      "./*.ts",
    ],
    "exclude": [
      "node_modules",
      "./src/**/*.spec.tsx",
      "./src/**/*.spec.tsx.snap"
    ]
  }